<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Login</display-name>
    <servlet>
        <servlet-name>MyLogin</servlet-name>
        <servlet-class>jsp.controller.loginController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Comments</servlet-name>
        <servlet-class>jsp.controller.commentsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyLogin</servlet-name>
        <url-pattern>/MyLogin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Comments</servlet-name>
        <url-pattern>/Comments</url-pattern>
    </servlet-mapping>
</web-app>
